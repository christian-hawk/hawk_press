                    <a href="/<%= article.slug %>" class="btn btn-info">Ler artigo</a>
                </div>
            </div>  
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float:right">Next >>></a>
            </div>
            
            <hr>
        </div>
